<div class="container login-form">
  	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-login">
				<div class="panel-heading">
					<div class="row">
						<h4>Editar perfil</h4>
					</div>
					<hr>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Correo electronico" %>
                </div>

                <div class="form-group">
                  <%= f.text_field :phone, class: "form-control", placeholder: "Telefono" %>
                </div>


                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contrase単a" %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
                  <% end %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar contrase単a"  %>
                </div>

                <div class="form-group">
                  <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Contrase単a Actual"  %>
                  <em>Necesitamos su contrase単a actual para confirmar los cambios</em>
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= f.submit "Guardar Cambios", class: "form-control btn btn-info"  %>
                    </div>
                  </div>
                </div>
              <% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
