<div class="container login-form">
  <div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="panel panel-login">
				<div class="panel-heading">
					<div class="row">
						<h4>Nuevo Articulo</h4>
					</div>
					<hr>
				</div>
				<div class="panel-body">
          <%= form_for @article do |f| %>
						<div class="row">
							<div class="col-lg-12 col-md-12">
                <div class="row">
                  <div class="col-xs-6 form-group">
                    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Nombre del articulo" %>
                  </div>

                  <div class="col-xs-6 form-group">
                    <input class="input-file" type="file" name="article[article_images_attributes][0][image]" id="article_article_images_attributes_0_image">
                  </div>
							  </div>
						  </div>

              <div class="col-lg-12 col-md-12">
                <div class="row">
                  <div class="col-xs-6 form-group">
                    <%= f.select :offer_type, generate_list(Article.offer_types) , { include_blank: "Seleccionar tipo" },  { class: 'form-control' }  %>
                  </div>
                </div>

                <div class="row">
                  <div class="col-xs-6 form-group">
                    <%= f.text_area :description, class: "form-control", placeholder: "DescripciÃ³n" %>
                  </div>
							  </div>

                <div class="row">
                  <div class="col-xs-6 form-group">
                    <h4 class="block-title-2"><span>status del producto</span></h4>

                    <div class="col-md-6 col-sm-6 col-xs-6">
                      <%= f.radio_button :status,'available', checked: @article.available?  %>
                      <%= f.label :status, 'Disponible' %>
                    </div>

                    <div class="col-md-6 col-sm-6 col-xs-6">
                      <%= f.radio_button :status,'reserved', checked: @article.reserved?   %>
                      <%= f.label :status, 'No Disponible' %>
                    </div>
                  </div>
                </div>
						  </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3">
                    <%= f.button "Guardar", class: "form-control btn btn-register"  %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
				</div>
			</div>
		</div>
	</div>
</div>
