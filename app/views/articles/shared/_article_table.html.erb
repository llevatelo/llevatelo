<div class="articles-listing">
  <table class="table table-striped table-bordered table-list">
    <thead>
      <tr>
        <th></th>
        <th>Nombre</th>
        <th>Descripci√≥n</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% articles.each do |article| %>
        <tr>
          <td style='width: 10%;'><%= image_tag article.photo, class: 'img-responsive' %></td>
          <td style='width: 10%;'><%= article.name %></td>
          <td><p style='width: 90%;'>
            <%= article.description %></p>
          </td>
          <td align="center" style='width: 10%;'>
            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_article_path(article), class: 'btn btn-default' %>
            <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, article_path(article),  data: { confirm: 'Esta seguro?' }, method: :delete, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
