<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: 'form-control',  placeholder: 'Correo electronico' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: 'off', placeholder: 'ContraseÃ±a', class: 'form-control'  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <%= f.submit 'Ingresar', class: "form-control btn btn-login"  %>
      </div>
    </div>
  </div>
<% end %>
