  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Correo electronico" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "ContreseÃ±a" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar contraseÃ±a"  %>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <%= f.submit "Registrarse", class: "form-control btn btn-register"  %>
